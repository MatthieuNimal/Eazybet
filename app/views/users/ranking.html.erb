<div class="p-8">
  <h1 class='text-[var(--ezb-red)] text-center mb-8 text-[2rem]'> 🎁 Airdrop</h1>
  <%= render "filters/filters" %>

  <section class="bg-[var(--bg-card)] p-8 rounded-2xl mb-8 scroll-smooth">
    <h2 class='text-[var(--ezb-red)] text-center mb-8 text-2xl'>  🏆 Classement de votre Division 🏆</h2>
    <div class="text-end mb-4">
      <%= link_to 'Où suis-je ?', "#user_#{current_user.id}", class: " text-[0.85rem] hover:underline" %>
    </div>
    <div class="bg-[var(--bg-card-dark)] border-[var(--blue-debutant)] border-2 text-center flex justify-center gap-4 flex-col mb-4 rounded-lg p-4">
      <p class="text-[var(--blue-debutant)] ">Division Débutant</p>
      <p>Top 80-100%</p>
    </div>

    <ul class="flex flex-col gap-4">
      <% @users.each_with_index do |user, rank| %>
        <li>
          <%= link_to user_path(user), id: "user_#{user.id}",
              class: "grid grid-cols-[60px_1fr_80px] p-2 border-[var(--blue-debutant)] border-l-4 rounded-lg transition-transform duration-200 hover:translate-x-[5px] scroll-mt-24 #{user.id == current_user.id ? 'bg-[var(--ezb-red)]' : 'bg-[var(--bg-card-dark)] hover:bg-[var(--bg-card-hover)]'}" do %>

            <p class="text-[0.85rem]" ><%= rank + 1 %></p>
            <p class="text-[0.85rem]"><%= user.username %></p>
            <p class="text-right text-[0.85rem]"><%= user.wallet.diamonds %> 💎</p>
          <% end %>
        </li>
      <% end %>
    </ul>
  </section>
</div>

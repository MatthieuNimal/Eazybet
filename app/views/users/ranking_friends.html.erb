<div class="p-8">
  <h1 class='text-[var(--ezb-red)] text-center mb-8 text-[2rem]'> 🎁 Airdrop</h1>
  <%= render "filters/filters" %>

  <section class="bg-[var(--bg-card)] p-8 rounded-2xl mb-8">
    <h2 class='text-[var(--ezb-red)] text-center mb-8 text-2xl '>👥 Classement des Amis 👥</h2>
   <p id='openModalFriend' class="p-4 flex items-center justify-center bg-[var(--ezb-red)] rounded-lg mb-6 text-[1.2rem] font-bold hover:bg-[var(--ezb-red-hover)] transform transition-colors duration-300 cursor-pointer text-center">
   ➕ Ajouter des amis</p>

    <ul class="flex flex-col gap-4">
      <% @users.each_with_index do |user, rank| %>
        <li class="grid grid-cols-[60px_1fr_80px] p-2 border-[var(--blue-debutant)] border-l-4 bg-[var(--bg-card-dark)] rounded-lg hover:bg-[var(--bg-card-hover)] transition-transform duration-200 hover:translate-x-[5px]">
          <p class="text-[0.85rem]" ><%= rank + 1 %></p>
          <p class="text-[0.85rem]"><%= user.first_name %></p>
          <p class="text-right text-[0.85rem]"><%= user.wallet.diamonds %> 💎</p>
        </li>
      <% end %>
    </ul>
  </section>
</div>

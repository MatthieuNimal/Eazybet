<%# app/views/admin/competitions/edit.html.erb %>
<div class="bg-white shadow overflow-hidden sm:rounded-lg p-6">
  <div class="pb-5 border-b border-gray-200 sm:flex sm:items-center sm:justify-between">
    <h1 class="text-2xl font-bold text-gray-900">Modifier la compétition</h1>
    <div class="mt-3 sm:mt-0 sm:ml-4 flex space-x-3">
      <%= link_to "Voir les détails", admin_competition_path(@competition), class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
      <%= link_to "Retour à la liste", admin_competitions_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
    </div>
  </div>

  <div class="mt-6">
    <%= render "form" %>
  </div>
</div>

<h2 class="uppercase font-bold leading-[1.2] text-2xl mb-8">Se connecter</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'flex flex-col gap-4 mb-8' }) do |f| %>
  <div class="flex flex-col gap-4">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"p-2 border border-white rounded-lg w-full bg-[var(--bg-card)]", placeholder: 'Entrez votre mail'   %>
  </div>

  <div class="flex flex-col gap-4">
    <%= f.label :password, "Mot de passe"  %>
    <%= f.password_field :password, autocomplete: "current-password", class: "p-2 border border-white rounded-lg w-full bg-[var(--bg-card)]", placeholder: 'Entrez votre mot de passe'   %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Se souvenir de moi" %>
    </div>
  <% end %>

  <div class="bg-[var(--ezb-red)] rounded-lg px-2.5 py-2 max-w-fit cursor-pointer">
    <%= f.submit "Se connecter" %>
  </div>
<% end %>

<%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "flex gap-2 px-4 py-2 bg-white text-black border border-gray-300 rounded-lg shadow hover:shadow-md transition duration-200 cursor-pointer" do %>
  <%= image_tag 'icons/google.svg', class: 'w-5 h-5', alt: 'Google' %>
  <span>Se Connecter avec Google</span>
<% end %>



<%= render "devise/shared/links" %>

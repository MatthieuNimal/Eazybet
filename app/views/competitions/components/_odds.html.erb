<li class="flex flex-col items-center justify-between flex-1 text-center px-2 gap-4" data-controller="dialog">
  <% if odd == @event.home_team_odd %>
  <% bg_color = "bg-[var(--ezb-red)]" %>

<% elsif odd == @event.away_team_odd %>
  <% bg_color = "bg-[var(--ezb-blue)]" %>
   <% txt_color= "text-black" %>

<% end %>

<p class="rounded-full <%= bg_color %> h-[48px] w-[48px] flex items-center justify-center <%= txt_color %> text-sm
<%= 'shadow-[0_0_5px_rgba(0,0,0,0.3),_0_0_10px_currentColor]' unless odd == @event.draw_odd  %>
 <%= 'opacity-0 pointer-events-none' if odd == @event.draw_odd %>">
<% unless odd == @event.draw_odd %>
  <%= odd.name[0] %>
<% end %>
</p>

  <p class='text-center text-white line-clamp-2'><%= odd.name == "Draw" ? I18n.t("odds.draw") : odd.name %></p>
<button
  class="bet-btn p-2.5 border text-white text-sm rounded-md transition-shadow duration-200
  <%= bet&.odd_id == odd.id ? 'bg-[var(--ezb-red)] border-[var(--ezb-red)]' : 'bg-transparent border-white' %>
  shadow-[0_0_8px_2px_rgba(255,255,255,0.6)] hover:text-black hover:bg-white focus:shadow-[0_0_10px_3px_rgba(255,255,255,0.8)]"
  <%= 'disabled' if bet.present? %>>
  x <%= number_with_precision(odd.price, precision: 2) %>
</button>
</li>


  <%= render "modal/modal-bet" %>

<script>
  document.querySelectorAll(".bet-btn").forEach((btn) => {
    btn.addEventListener("click", () => {
      // Supprime la classe de tous les boutons
      document.querySelectorAll(".bet-btn").forEach(b => {
        b.classList.remove("bg-[var(--ezb-red)]", "border-[var(--ezb-red)]");
        b.classList.add("bg-transparent", "border-white");
      });

      // Ajoute la classe au bouton cliqu√©
      btn.classList.add("bg-[var(--ezb-red)]", "border-[var(--ezb-red)]");
      btn.classList.remove("bg-transparent", "border-white");
    });
  });
</script>

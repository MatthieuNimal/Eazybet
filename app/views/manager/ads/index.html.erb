<main class="container mx-auto">
  <h1 class="font-bold text-4xl">
    Bienvenue <%= current_user.first_name %> dans l'interface de gestion des publicités
  </h1>

  <div class="flex justify-between items-center mt-4">
    <h2 class="text-2xl font-semibold">Liste des publicités</h2>
    <%= link_to 'Ajouter une nouvelle publicité', new_manager_ad_path, class: 'bg-blue-400 hover:bg-blue-500 text-white font-bold py-2 px-4 rounded hover:shadow-lg transition duration-300 ease-in-out' %>
  </div>

  <section class="px-4 mt-4">
    <% if @ads.empty? %>
      <p class="mt-4 text-center text-gray-500">Aucune publicité trouvée.</p>

    <% else %>
      <div class="overflow-x-auto">
        <table class="min-w-full border border-gray-800">
          <thead>
            <tr>
              <th class="py-2 px-4 border-b">ID</th>
              <th class="py-2 px-4 border-b">Titre</th>
              <th class="py-2 px-4 border-b">Description</th>
              <th class="py-2 px-4 border-b">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @ads.each do |ad| %>
              <tr class="hover:bg-gray-800">
                <td class="py-2 px-4 border-b"><%= ad.id %></td>
                <td class="py-2 px-4 border-b"><%= ad.title %></td>
                <td class="py-2 px-4 border-b"><%= ad.description %></td>
                <td class="py-2 px-4 border-b">
                  <%= link_to 'Voir', manager_ad_path(ad), class: 'btn btn-blue-400 hover:bg-blue-500 text-white font-bold py-1 px-3 rounded hover:shadow-lg transition duration-300 ease-in-out' %>
                  <%= link_to 'Modifier', edit_manager_ad_path(ad), class: 'btn btn-yellow-400 hover:bg-yellow-500 text-white font-bold py-1 px-3 rounded hover:shadow-lg transition duration-300 ease-in-out' %>
                  <%= link_to 'Supprimer', manager_ad_path(ad), method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer cette publicité ?' }, class: 'btn btn-red-400 hover:bg-red-500 text-white font-bold py-1 px-3 rounded hover:shadow-lg transition duration-300 ease-in-out' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    <% end %>

  </section>
</main>

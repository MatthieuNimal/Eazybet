<main class="container mx-auto">
  <h1 class="font-bold text-4xl">
    Bienvenue <%= current_user.first_name %> dans l'interface de gestion des équipes
  </h1>

  <div class="flex justify-between items-center mt-4">
    <h2 class="text-2xl font-semibold">Liste des équipes</h2>
    <%= link_to 'Ajouter une nouvelle équipe', new_manager_team_path, class: 'bg-blue-400 hover:bg-blue-500 text-white font-bold py-2 px-4 rounded hover:shadow-lg transition duration-300 ease-in-out' %>
  </div>

  <section class="px-4 mt-4">
    <% if @teams.empty? %>
      <p class="mt-4 text-center text-gray-500">Aucune équipe trouvée.</p>

    <% else %>
      <div class="overflow-x-auto">
        <table class="min-w-full border border-gray-800">
          <thead>
            <tr>
              <th class="py-2 px-4 border-b">Actions</th>
              <th class="py-2 px-4 border-b">Nom d'api</th>
              <th class="py-2 px-4 border-b">ID sur API</th>
              <th class="py-2 px-4 border-b">Nom à afficher</th>
              <th class="py-2 px-4 border-b">anglais</th>
              <th class="py-2 px-4 border-b">français</th>
              <th class="py-2 px-4 border-b">espagnol</th>

            </tr>
          </thead>
          <tbody>
            <% @teams.each do |team| %>
              <tr class="hover:bg-gray-800">

                <td class="py-2 px-4 border-b">
                  <%= link_to 'Voir', manager_team_path(team), class: 'btn btn-blue-400 hover:bg-blue-500 text-white font-bold py-1 px-3 rounded hover:shadow-lg transition duration-300 ease-in-out' %>
                  <%= link_to 'Modifier', edit_manager_team_path(team), class: 'btn btn-yellow-400 hover:bg-yellow-500 text-white font-bold py-1 px-3 rounded hover:shadow-lg transition duration-300 ease-in-out' %>
                  <%= link_to 'Supprimer', manager_team_path(team), method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer cette publicité ?' }, class: 'btn btn-red-400 hover:bg-red-500 text-white font-bold py-1 px-3 rounded hover:shadow-lg transition duration-300 ease-in-out' %>
                </td>
                <th class="py-2 px-4 border-b"><%= team.full_name %></th>
                <th class="py-2 px-4 border-b"><%= team.odd_api_id %></th>
                <th class="py-2 px-4 border-b"><%= team.short_name %></th>
                <th class="py-2 px-4 border-b"><%= team.english_name %></th>
                <th class="py-2 px-4 border-b"><%= team.french_name %></th>
                <th class="py-2 px-4 border-b"><%= team.spanish_name %></th>

              </tr>
            <% end %>
          </tbody>

        </table>
      </div>

    <% end %>

  </section>
</main>

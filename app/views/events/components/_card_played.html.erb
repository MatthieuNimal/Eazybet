<li class="flex-shrink-0 border-2 border-blue-900 m-2 w-[300px] bg-blue-900 rounded-lg grid grid-rows-[20%,60%,20%] text-sm">
  <div class="px-2.5 h-[30px] flex justify-end bg-gray-900 rounded-t-lg items-center">
    <p class="text-white">
      <%= l(commence_time) %>
    </p>
  </div>
  <ul id="odds_for_event_<%= id %>" class="grid grid-cols-3 gap-4 p-2.5 items-end">
    <% if odds.any? %>
      <%= render "events/components/bet", odd: home_team_odd, bet: bet %>
      <%= render "events/components/bet", odd: draw_odd, bet: bet %>
      <%= render "events/components/bet", odd: away_team_odd, bet: bet %>
    <% end %>
  </ul>
  <div class="flex flex-col gap-2 p-2.5">
    <div class="flex flex-col gap-2">
      <h3>Mise</h3>
       <div class="flex gap-2  bg-gray-900 rounded-lg items-center" >
         <span class='bg-yellow-400 p-2 rounded-l-lg'>
                <%= image_tag 'icons/coin.svg', alt: "diamond" %>
              </span>
      <p class='bg-gray-900 rounded-lg px-4 py-2'><%= bet.stake %></p>

      </div>
    </div>

    <div class="flex flex-col gap-2 w-full">
      <h3>Gains potentiels</h3>
      <div class="flex gap-2  bg-gray-900 rounded-lg items-center" >
        <span class='bg-blue-400 p-2 rounded-l-lg'>
                <%= image_tag 'icons/diamond.svg', alt: "diamond" %>
              </span>
           <p class= 'rounded-lg px-4 py-2'><%= bet.stake * bet.odd.price %></p>
      </div>

    </div>
  </div>
  <div class="flex justify-end items-center text-rose-600 p-2.5">
    <%= link_to event_path(event) do %>
      <div class="rounded-lg bg-gray-900 flex gap-2 py-1 px-2 items-center">
        <p class="text-rose-600"><%= comments.size %></p>
        <%= image_tag 'icons/comment.svg', alt: "Commentaires", class: "w-6 h-6" %>
      </div>
    <% end %>
  </div>
</li>

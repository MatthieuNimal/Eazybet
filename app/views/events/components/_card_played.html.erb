<li class="flex-none w-[calc(100%-1rem)] snap-start max-w-[500px] bg-[#0f3460] rounded-lg shadow-[0_0_5px_rgba(0,0,0,0.3)] mb-4 overflow-hidden transition-all duration-300 ease-[cubic-bezier(0.4,_0,_0.2,_1)] border border-[rgba(255,_255,_255,_0.1)] ">
  <div class="px-2.5 h-[30px] flex justify-end bg-gray-900 rounded-t-lg items-center">
    <p class="text-white">
      <%= l(commence_time) %>
    </p>
  </div>
  <ul id="odds_for_event_<%= id %>" class="grid grid-cols-3 gap-4 p-2.5 items-end border-b border-[var(--ezb-red)]">
    <% if odds.any? %>
      <%= render "events/components/bet", odd: home_team_odd, bet: bet %>
      <%= render "events/components/bet", odd: draw_odd, bet: bet %>
      <%= render "events/components/bet", odd: away_team_odd, bet: bet %>
    <% end %>
  </ul>
  <div class="flex flex-col p-2">

      <p >Mise: <%= bet.stake %>🪙 sur <%= bet.odd.name %></p>

     <p >Gains potentiels:<%= bet.diamonds_to_win %> 💎</p>




  </div>

</li>

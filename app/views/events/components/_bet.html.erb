<li class="flex flex-col items-center justify-between flex-1 text-center px-2 gap-4" data-controller="dialog">

  <% if odd == home_team_odd %>
   <% bg_color = "bg-[var(--ezb-red)]" %>
  <% elsif odd == away_team_odd %>
  <% bg_color = "bg-[var(--ezb-blue)]" %>
    <% txt_color= "text-black" %>
  <% end %>


  <p class="rounded-full  <%= bg_color %> <%= txt_color %> h-[48px] w-[48px] flex items-center justify-center text-sm">
    <% unless odd.name == 'Draw' %>
      <%= odd.name[0] %>
    <% end %>
  </p>

  <p class='text-center text-white line-clamp-2'>
    <%= odd.name == "Draw" ? I18n.t("odds.draw") : odd.name %>
  </p>

</li>

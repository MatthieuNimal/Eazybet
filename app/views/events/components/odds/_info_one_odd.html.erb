<li class="flex flex-col items-center justify-between flex-1 text-center px-2 gap-4" data-controller="dialog" data-action="click->dialog#backdropClose">

  <p class='text-center text-white line-clamp-2'>
    <%= odd.name == "Draw" ? I18n.t("odds.draw") : odd.name %>
  </p>
  <button class="px-4 py-2 text-white text-sm rounded-md transition-shadow duration-200 bg-[#103560]

   <%= bet&.odd_id == odd.id ? 'bg-[var(--ezb-red)] border-[var(--ezb-red)]' : '' %>   hover:shadow-[0_0_8px_2px_rgba(255,255,255,0.6)] hover:text-black hover:bg-white focus:shadow-[0_0_10px_3px_rgba(255,255,255,0.8)] active:bg-[var(--ezb-red)] active:border-[var(--ezb-red)]" data-action="dialog#open" <%= 'disabled' if bet.present? %>>
    x <%= number_with_precision(odd.price, precision: 2) %>
  </button>

  <%= render "events/components/bets/modal_form_bet",
    odd: odd
   %>
</li>

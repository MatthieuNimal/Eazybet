<%= turbo_frame_tag "competition_events_#{@competition.id}" do %>
<ul class="flex overflow-x-auto scroll-snap-x scroll-snap-mandatory py-4 px-2 -mx-2 scroll-smooth touch-auto scrollbar-none gap-4">    <% @events.each do |event| %>

      <%= render "competitions/components/card",
        event: event, id:event.id,
        home_team: event.home_team,
        away_team: event.away_team,
        home_team_odd: event.home_team_odd,
        away_team_odd: event.away_team_odd,
        draw_odd:event.draw_odd,
        commence_time: event.commence_time,
        odds:event.odds,
        comments:event.comments,
        bet: user_signed_in? ? event.bets.find_by(user_id: current_user.id) : nil  %>

    <% end %>
  </ul>
<% end %>
